@{
    ViewBag.Title = "Home Page";
}

<div ng-controller="HomeController">
    <div class="row">
        <div class="col-md-6 col-md-offset-2">
            <div ng-repeat="Manual in Manuals | orderBy: '-Id'">
                <div class="well" @*ng-click="OpenManual(Manual.Id, Manual.Template.Name)"*@>
                    <div class="row">
                        <div class="col-md-2">
                            <div class="btn-group-vertical pull-left">
                                <button class="btn btn-primary" ng-click="ChangeRating(Manual,true)">Up</button>
                                <div class="btn btn-default disabled" id="rating">{{Manual.Rating}}</div>
                                <button class="btn btn-danger" ng-click="ChangeRating(Manual,false)">Down</button>
                            </div>
                        </div>
                        
                        <div class="col-md-10">
                            <h4> <a href="/Templates/{{Manual.Template.Name}}?manual={{Manual.Id}}">{{Manual.Name}}</a> </h4>
                            Author: <a href="/User/ViewUserProfile/{{Manual.User.Id}}"> {{Manual.User.Email}} </a>
                            <h5>{{Manual.Category.Name}} <span ng-repeat="tag in Manual.Tags">{{tag.Name}} </span></h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <jqcloud words="words" autoResize="true" height="100" colors="{{colors}}" delay="3" steps="7" font-size="{from:0.09, to:0.04}"></jqcloud>
        </div>        
    </div>
</div>
