@model Manuals.Models.CommentViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@ViewBag.Text

<hr>
<div ng-controller="CommentController">
    <div class="row">
        <div class="col-md-6 col-md-offset-2">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div ng-init="NewComment.ManualId=@ViewBag.Manual;"></div>
                <div class="form-horizontal">

                    <div class="form-group">
                        @*@Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })*@
                        <div class="input-group col-md-push-1 col-md-10">
                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", ng_model = "NewComment.Description" } })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            <span class="input-group-btn">
                                <button type="button" class="btn btn-default" ng-click="Create(NewComment)">New comment</button>
                            </span>
                         </div>
                    </div>
                </div>}


            <div ng-repeat="Comment in Comments | orderBy: '-Id'">
                <div class="well" @*ng-click="OpenManual(Manual.Id, Manual.Template.Name)"*@>
                    <div class="row">
                        <div class="col-md-2">
                            <div class="btn-group-vertical pull-left">
                                <button class="btn btn-primary" ng-click="ChangeCommentRating(Comment,true)">Up</button>
                                <div class="btn btn-default disabled" id="rating">{{Comment.Rating}}</div>
                                <button class="btn btn-danger" ng-click="ChangeCommentRating(Comment,false)">Down</button>
                            </div>
                        </div>
                        <div class="col-md-10">
                            {{Comment.Description}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
